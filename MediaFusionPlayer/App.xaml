<Application x:Class="MediaFusionPlayer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2"
             Startup="Application_Startup">
    <!-- Изменили здесь! -->
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Presentation/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Цвета для имитации Acrylic/Mica в WPF .NET 8 -->
            <Color x:Key="WindowBgColor">#E8111111</Color>
            <Color x:Key="PanelBgColor">#F81E1E1E</Color>
            <Color x:Key="AccentColor">#1DB954</Color>

            <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBgColor}"/>
            <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBgColor}"/>
            <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>

        </ResourceDictionary>
    </Application.Resources>
</Application>