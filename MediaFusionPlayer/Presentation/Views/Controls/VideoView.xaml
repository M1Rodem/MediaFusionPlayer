<UserControl x:Class="MediaFusionPlayer.Presentation.Views.Controls.VideoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
             xmlns:converters="clr-namespace:MediaFusionPlayer.Presentation.Converters"
             Background="Black"
             Width="1200" Height="250"
             MaxWidth="1200" MaxHeight="250"
             ClipToBounds="True">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid>
        <Image Source="{Binding CurrentTrack.CoverArt}" Stretch="UniformToFill"/>
        <vlc:VideoView MediaPlayer="{Binding VideoMediaPlayer}"
                       Visibility="{Binding IsVideo, Converter={StaticResource BoolToVis}}"/>
        <Border Background="Transparent"
                Visibility="{Binding IsVideo, Converter={StaticResource BoolToVis}}"/>
    </Grid>
</UserControl>