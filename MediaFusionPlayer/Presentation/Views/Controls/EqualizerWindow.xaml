<Window x:Class="MediaFusionPlayer.Presentation.Views.EqualizerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaFusionPlayer.Presentation.Views"
        xmlns:vm="clr-namespace:MediaFusionPlayer.Presentation.ViewModels"
        mc:Ignorable="d"
        Title="🎛️ Эквалайзер" 
        Height="450" 
        Width="650"
        MinHeight="400"
        MinWidth="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow"
        Background="#1E1E1E"
        Foreground="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
            <CheckBox Content="Включить эквалайзер" 
                      IsChecked="{Binding IsEnabled}" 
                      Foreground="White"
                      FontSize="14"
                      Margin="0,0,20,0"
                      VerticalAlignment="Center"/>

            <TextBlock Text="Пресеты:" 
                       Foreground="LightGray" 
                       Margin="0,0,10,0"
                       VerticalAlignment="Center"/>

            <ComboBox ItemsSource="{Binding Presets}"
                      SelectedItem="{Binding SelectedPreset}"
                      Width="120"
                      Height="28"
                      Background="#2D2D2D"
                      Foreground="White"
                      BorderBrush="#404040"/>

            <Button Content="Сброс" 
                    Command="{Binding ResetCommand}"
                    Width="80"
                    Height="28"
                    Margin="20,0,0,0"
                    Background="#3E3E3E"
                    Foreground="White"
                    BorderBrush="#404040"/>
        </StackPanel>

        <!-- Полосы эквалайзера -->
        <ScrollViewer Grid.Row="1" 
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Disabled"
                      Margin="0,0,0,10">
            <ItemsControl ItemsSource="{Binding Bands}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="10,0" 
                                    Width="50"
                                    HorizontalAlignment="Center">

                            <!-- Слайдер (вертикальный) -->
                            <Slider Value="{Binding Gain}"
                                    Minimum="{Binding MinGain}"
                                    Maximum="{Binding MaxGain}"
                                    TickFrequency="{Binding TickFrequency}"
                                    IsSnapToTickEnabled="True"
                                    Orientation="Vertical"
                                    Height="250"
                                    TickPlacement="Both"
                                    Background="Transparent"
                                    Foreground="#4CAF50"
                                    BorderBrush="#404040"
                                    Thumb.DragCompleted="Slider_DragCompleted">

                                <!-- Вместо TickTemplate используем стиль для тиков -->
                                <Slider.Resources>
                                    <Style TargetType="Slider">
                                        <Setter Property="TickBar.Visibility" Value="Visible"/>
                                    </Style>
                                </Slider.Resources>
                            </Slider>

                            <!-- Метка частоты -->
                            <TextBlock Text="{Binding FrequencyLabel}"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,0"
                                       Foreground="LightGray"
                                       FontSize="11"/>

                            <!-- Значение gain -->
                            <TextBlock Text="{Binding Gain, StringFormat='{}{0:0} dB'}"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"
                                       Foreground="#4CAF50"
                                       FontSize="12"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Кнопка закрытия -->
        <Button Grid.Row="2" 
                Content="Закрыть" 
                Command="{Binding CloseCommand}"
                Width="100"
                Height="30"
                HorizontalAlignment="Center"
                Background="#3E3E3E"
                Foreground="White"
                BorderBrush="#404040"/>
    </Grid>
</Window>