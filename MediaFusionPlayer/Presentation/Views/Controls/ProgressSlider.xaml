<UserControl x:Class="MediaFusionPlayer.Presentation.Views.Controls.ProgressSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root">
    <Grid Background="Transparent" Height="60">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Время -->
        <Grid Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="{Binding CurrentPosition, ElementName=Root, StringFormat={}{0:mm\\:ss}}"
                       Foreground="#BBBBBB" FontSize="11" HorizontalAlignment="Left"/>
            <TextBlock Text="{Binding CurrentDuration, ElementName=Root, StringFormat={}{0:mm\\:ss}}"
                       Foreground="#BBBBBB" FontSize="11" HorizontalAlignment="Right"/>
        </Grid>

        <!-- Трек -->
        <Grid Grid.Row="1" x:Name="TrackGrid" Height="6" Background="Transparent">
            <!-- Фон трека -->
            <Rectangle Fill="#3C3C3C" RadiusX="3" RadiusY="3"/>

            <!-- Заполненный прогресс -->
            <Rectangle x:Name="ProgressFill" Fill="#007ACC" RadiusX="3" RadiusY="3"
                       HorizontalAlignment="Left" Width="0"/>

            <!-- Thumb (видим при наведении или драге) -->
            <Ellipse x:Name="Thumb" Width="14" Height="14" Fill="#007ACC"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center"
                     Margin="-7,0,0,0"
                     Visibility="Collapsed">
                <Ellipse.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.4" BlurRadius="6" ShadowDepth="2"/>
                </Ellipse.Effect>
            </Ellipse>
        </Grid>
    </Grid>
</UserControl>