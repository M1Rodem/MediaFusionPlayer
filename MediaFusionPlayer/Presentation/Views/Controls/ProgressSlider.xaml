<UserControl x:Class="MediaFusionPlayer.Presentation.Views.Controls.ProgressSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:MediaFusionPlayer.Presentation.Converters"
             Height="70">
    <UserControl.Resources>
        <conv:TimeSpanToStringConverter x:Key="TsConv"/>
    </UserControl.Resources>

    <Grid Margin="12,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Время -->
        <Grid Grid.Row="0" Margin="0,0,0,6">
            <TextBlock Text="{Binding CurrentPosition, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource TsConv}}"
                       Foreground="#AAAAAA" FontSize="11" FontWeight="SemiBold" HorizontalAlignment="Left"/>
            <TextBlock Text="{Binding CurrentDuration, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource TsConv}}"
                       Foreground="#AAAAAA" FontSize="11" FontWeight="SemiBold" HorizontalAlignment="Right"/>
        </Grid>

        <!-- Полоса прогресса -->
        <Grid Grid.Row="1" x:Name="TrackGrid" Height="8" Cursor="Hand">
            <Border Background="#333333" CornerRadius="4"/>
            <Border x:Name="ProgressFill" Background="#1DB954" CornerRadius="4" HorizontalAlignment="Left"/>
            <Ellipse x:Name="Thumb" Width="16" Height="16" Fill="#1DB954" HorizontalAlignment="Left"
                     VerticalAlignment="Center" Margin="-8,0,0,0" Visibility="Collapsed">
                <Ellipse.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.4" BlurRadius="8"/>
                </Ellipse.Effect>
            </Ellipse>
        </Grid>
    </Grid>
</UserControl>