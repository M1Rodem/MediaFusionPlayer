<Window x:Class="MediaFusionPlayer.Presentation.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:MediaFusionPlayer.Presentation.Views.Controls"
        xmlns:conv="clr-namespace:MediaFusionPlayer.Presentation.Converters"
        Title="MediaFusion Player"
        Height="920" Width="1620"
        WindowStartupLocation="CenterScreen"
        Background="#121212"
        AllowsTransparency="True"
        WindowStyle="None"
        AllowDrop="True"
        Drop="Window_Drop"
        DragOver="Window_DragOver">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- ЭТОТ ПУТЬ РАБОТАЕТ ВСЕГДА, если файл в проекте имеет Build Action = Page или Resource -->
                <ResourceDictionary Source="/MediaFusionPlayer;component/Presentation/Resources/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="#121212" CornerRadius="16" BorderBrush="#333" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="130"/>
            </Grid.RowDefinitions>

            <!-- === Тайтлбар === -->
            <Grid Grid.Row="0" Background="#0F000000">
                <TextBlock Text="MediaFusion Player" 
                           Foreground="#E0E0E0" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           VerticalAlignment="Center" 
                           Margin="24,0"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="−" Width="50" Height="50" Click="Minimize_Click" 
                            Background="Transparent" Foreground="#AAA" FontSize="20"/>
                    <Button Content="□" Width="50" Height="50" Click="Maximize_Click" 
                            Background="Transparent" Foreground="#AAA" FontSize="16"/>
                    <Button Content="×" Width="50" Height="50" Click="Close_Click" 
                            Background="#E81123" Foreground="White" FontSize="20"/>
                </StackPanel>
            </Grid>

            <!-- === Основной контент — ПЛЕЙЛИСТ СЛЕВА, ОБЛОЖКА СПРАВА === -->
            <Grid Grid.Row="1" Margin="20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.2*"/>
                    <!-- Плейлист шире -->
                    <ColumnDefinition Width="1.3*"/>
                    <!-- Обложка + инфа -->
                </Grid.ColumnDefinitions>

                <!-- Плейлист слева + кнопка "Добавить файлы" -->
                <Border Grid.Column="0" Background="#1E1E1E" CornerRadius="12" Margin="0,0,20,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Кнопка добавить -->
                        <Button Content="Добавить файлы" 
                                Command="{Binding AddFilesCommand}"
                                HorizontalAlignment="Center"
                                Margin="20"
                                Padding="24,12"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Background="#1DB954"
                                Foreground="White"
                                BorderThickness="0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="30" 
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1ed760"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <ListBox Grid.Row="1"
                                 ItemsSource="{Binding Playlist}"
                                 SelectedItem="{Binding CurrentTrack, Mode=TwoWay}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 ItemContainerStyle="{StaticResource PlaylistItemStyle}"
                                 Margin="0,10,0,0"
                                 Padding="10">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="8,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="90"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="♪" Foreground="#666" FontSize="18" VerticalAlignment="Center"/>
                                        <StackPanel Grid.Column="1" Margin="12,0">
                                            <TextBlock Text="{Binding DisplayName}" 
                                                       Foreground="White" 
                                                       FontWeight="Medium"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding Artist}" 
                                                       Foreground="#AAA" 
                                                       FontSize="13"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" 
                                                   Text="{Binding Duration, Converter={StaticResource TimeSpanConverter}}"
                                                   Foreground="#888" 
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>

                <!-- Большая обложка справа -->
                <controls:Visualizer Grid.Column="1"/>
            </Grid>

            <!-- === НИЖНЯЯ ПАНЕЛЬ — ИСПРАВЛЕНА === -->
            <Border Grid.Row="2" Background="#181818" CornerRadius="0,0,16,16">
                <Grid Margin="30,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="380"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="380"/>
                    </Grid.ColumnDefinitions>

                    <!-- Левая часть: обложка + название -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="{Binding CurrentTrack.CoverArt}" 
                               Width="76" Height="76" 
                               Stretch="UniformToFill">
                            <Image.Clip>
                                <RectangleGeometry RadiusX="12" RadiusY="12" Rect="0,0,76,76"/>
                            </Image.Clip>
                        </Image>
                        <StackPanel Margin="18,0" VerticalAlignment="Center" Width="270">
                            <TextBlock Text="{Binding CurrentTrack.DisplayName}" 
                                       Foreground="White" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="{Binding CurrentTrack.Artist}" 
                                       Foreground="#B3B3B3" 
                                       FontSize="14"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Центр: кнопки + прогресс -->
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,16">
                            <Button Content="Previous" Command="{Binding PreviousCommand}" Style="{StaticResource ModernControlButton}"/>
                            <Button Command="{Binding PlayPauseCommand}" Style="{StaticResource PlayPauseButtonStyle}" Margin="32,0"/>
                            <Button Content="Next" Command="{Binding NextCommand}" Style="{StaticResource ModernControlButton}"/>
                        </StackPanel>

                        <!-- Прогресс-слайдер теперь виден -->
                        <controls:ProgressSlider Grid.Row="1"
                            CurrentPosition="{Binding CurrentPosition, Mode=TwoWay}"
                            CurrentDuration="{Binding CurrentDuration}"
                            SeekRequested="ProgressSlider_SeekRequested"
                            Margin="60,0"/>
                    </Grid>

                    <!-- Правая часть: громкость + другие кнопки -->
                    <controls:VolumeControl Grid.Column="2" 
                                            HorizontalAlignment="Right" 
                                            VerticalAlignment="Center"
                                            Width="280"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>